<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.fluidsim.ui.FluidSurfaceView
        android:id="@+id/fluidSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.fluidsim.simulation.FluidSimulationView
        android:id="@+id/simulationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:padding="16dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initializing..."
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/aiToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Assist" />

            <SeekBar
                android:id="@+id/aiStrength"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Switch
                android:id="@+id/bloomToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Bloom" />

            <Switch
                android:id="@+id/particlesToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Particles" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palette" />

            <Spinner
                android:id="@+id/paletteSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid" />

            <Spinner
                android:id="@+id/gridSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure Iters" />

            <SeekBar
                android:id="@+id/pressureSeek"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
